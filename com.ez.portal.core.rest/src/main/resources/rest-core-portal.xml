<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xmlns:beans="http://cxf.apache.org/configuration/beans"
    xmlns:context="http://www.springframework.org/schema/context"
    xmlns:jaxrs="http://cxf.apache.org/jaxrs" 
    xmlns:cxf="http://cxf.apache.org/core"
    xmlns:jaxws="http://cxf.apache.org/jaxws"
    xsi:schemaLocation="http://www.springframework.org/schema/beans 
        http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://cxf.apache.org/configuration/beans 
        http://cxf.apache.org/schemas/configuration/cxf-beans.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
        http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd
        http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd 
        http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd"> 
        
    <bean id="gZIPOutInterceptor" class="org.apache.cxf.transport.common.gzip.GZIPOutInterceptor" />
    
    <bean id="loginService" class="com.ez.portal.core.rest.service.impl.LoginServiceImpl" autowire="byName" />
    <bean id="loginServiceManager" class="com.ez.portal.core.rest.manager.LoginServiceManager" autowire="byName" />
    
    <bean id="portalSessionService" class="com.ez.portal.core.rest.service.impl.PortalSessionServiceImpl" autowire="byName" />
    <bean id="portalSessionServiceManager" class="com.ez.portal.core.rest.manager.PortalSessionServiceManager" autowire="byName" />
    
    <bean id="userService" class="com.ez.portal.core.rest.service.impl.UserServiceImpl" autowire="byName" />
    <bean id="userServiceManager" class="com.ez.portal.core.rest.manager.impl.UserServiceManagerImpl" autowire="byName" />
    
    <bean id="dbServerServiceManager" class="com.ez.portal.core.rest.manager.impl.DBServerServiceManagerImpl" autowire="byName" />
    
    <bean id="userSpaceService" class="com.ez.portal.core.rest.service.impl.UserSpaceServiceImpl" autowire="byName" />
    <bean id="userSpaceServiceManager" class="com.ez.portal.core.rest.manager.UserSpaceServiceManager" autowire="byName" />
    
    <bean id="userRoleService" class="com.ez.portal.core.rest.service.impl.UserRoleServiceImpl" autowire="byName" />
    <bean id="userRoleServiceManager" class="com.ez.portal.core.rest.manager.impl.UserRoleServiceManagerImpl" autowire="byName" />
    
    <jaxrs:server id="logService" address="/login">
        <jaxrs:serviceBeans>
            <ref bean="loginService" />
        </jaxrs:serviceBeans>
        <jaxrs:providers>
            <ref bean="jsonProvider" />
        </jaxrs:providers>
    </jaxrs:server>
    
    <jaxrs:server id="portSessionService" address="/portal-session">
        <jaxrs:serviceBeans>
            <ref bean="portalSessionService" />
        </jaxrs:serviceBeans>
        <jaxrs:providers>
            <ref bean="jsonProvider" />
        </jaxrs:providers>
        <jaxrs:inInterceptors>
        	<ref bean="authValidatorInterceptor"/>
        </jaxrs:inInterceptors>
    </jaxrs:server>
    
    <jaxrs:server id="usrSpaceService" address="/user-space">
        <jaxrs:serviceBeans>
            <ref bean="userSpaceService" />
        </jaxrs:serviceBeans>
        <jaxrs:providers>
            <ref bean="jsonProvider" />
        </jaxrs:providers>
        <jaxrs:inInterceptors>
        	<ref bean="authValidatorInterceptor"/>
        </jaxrs:inInterceptors>
    </jaxrs:server>
    
    <jaxrs:server id="usrService" address="/user">
        <jaxrs:serviceBeans>
            <ref bean="userService" />
        </jaxrs:serviceBeans>
        <jaxrs:providers>
            <ref bean="jsonProvider" />
        </jaxrs:providers>
        <jaxrs:inInterceptors>
        	<ref bean="authValidatorInterceptor"/>
        </jaxrs:inInterceptors>
        <jaxrs:outInterceptors>
        	<ref bean="gZIPOutInterceptor"/>
        </jaxrs:outInterceptors>
    </jaxrs:server>
    
    <jaxrs:server id="usrRoleService" address="/user-role">
        <jaxrs:serviceBeans>
            <ref bean="userRoleService" />
        </jaxrs:serviceBeans>
        <jaxrs:providers>
            <ref bean="jsonProvider" />
        </jaxrs:providers>
        <jaxrs:inInterceptors>
        	<ref bean="authValidatorInterceptor"/>
        </jaxrs:inInterceptors>
    </jaxrs:server>
    
</beans>